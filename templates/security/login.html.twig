<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Todo list app | Sign in !</title>
    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/login/login.css') }}"/>

    {% endblock %}
</head>

<body id="LoginForm">
<div class="container">
    <h1 class="form-heading">Todo list app | {% trans %}Sign in !{% endtrans %}</h1>
    <div class="login-form">
        <div class="main-div">
            <div class="panel">
                <h2>Admin Login</h2>
                <p>
                    {% trans %}Please enter your email and password{% endtrans %}
                </p>
            </div>
            <form id="Login" method="post">

                <div class="form-group">

                    <input type="email" name="_username" class="form-control" id="inputEmail"
                           placeholder="Email Address" value="{{ last_username }}">

                </div>

                <div class="form-group">

                    <input type="password" name="_password" class="form-control" id="inputPassword"
                           placeholder="Password" required>

                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {% if error %}
                    <div class="alert alert-danger">
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"
                               name="_remember_me"> {% trans %}Remember me{% endtrans %}
                    </label>
                </div>
                <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />
                <button type="submit" class="btn btn-primary">{% trans %}Login{% endtrans %}</button>



            </form>
        </div>
        <p class="botto-text"> Designed by Sunil Rajput</p>
    </div>
</div>
</div>

<script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
</body>

</html>