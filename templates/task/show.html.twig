{% extends 'base.html.twig' %}

{% block title %}
  Task / {{ task.title }}
{% endblock %}

{% block body %}
<main role="main" class="container">

    <div class="blog-post">
        <h2 class="blog-post-title">{{ task.title }}</h2>
        <p class="blog-post-meta">20 October 2019 by <a href="#">Oussama</a> <span class="js-like-task-count">0</span>
            <a class="js-like-task far fa-heart" href="{{ path('app_toggle_heart', {id: task.id}) }}"  ></a></p>

        <p>{{ task.description }} your id is {{ task.id }}</p>

    </div>
</main>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/set_task_status.js') }}"></script>
{% endblock %}